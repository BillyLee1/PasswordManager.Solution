@{
  Layout = "_Layout";
}

@using PasswordManager.Models;

<h1>Welcome to your Password Manager!</h1>

<p>@Html.ActionLink("Create or manage an account", "Index", "Account")</p>

<hr>

<h4>Passwords</h4>
@if (Model["passwords"].Length == 0)
{
  <p>You have not added any passwords yet!</p>
}
<ul>
  @foreach (Password password in Model["passwords"])
  {
    <li>@Html.ActionLink(@password.Site, "Details", "Passwords", new { id = @password.PasswordId})</li>
  }
</ul>

<hr>

<p>@Html.ActionLink("Manage passwords", "Index", "Passwords")</p>
