@{
  Layout = "_Layout";
}

@using PasswordManager.Models;

<p>@Html.ActionLink("Home", "Index", "Passwords") | @Html.ActionLink("Logout", "Index", "Account")</p>

<h1>Accounts </h1>

<div class="btn-group" role="group" aria-label="Basic outlined example">
  <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Create an entry", "Create")</button>
  <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Manage Login", "Index", "Account") </button>
</div>

@if(@Model.Count == 0)
{
  <h2>There are no current accounts saved</h2>
}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Website</th>
      </tr>
    </thead>
    <tbody>
      @foreach(Password password in Model)
      {
        <tr>
          <td>@Html.ActionLink($"{password.Site}", "Details", new {id = password.PasswordId})</td>
            </tr>
      }
  </tbody>
</table>


<p></p>
<p></p>
