@{
  Layout = "_Layout";
}
<hr />
@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-primary" value="Log out" />
    <p>@Html.ActionLink("Home", "Index", "Passwords")</p>
  }
}
else
{
  <div class="loginIndexBtn">
    <p class="loginIndexBtnSel">@Html.ActionLink("Home", "Index", "Passwords")</p>
    <p class="loginIndexBtnSel">@Html.ActionLink("Register", "Register")</p>
    <p class="loginIndexBtnSel">@Html.ActionLink("Log in", "Login")</p>

  </div>
}
